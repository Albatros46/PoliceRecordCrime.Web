@model PoliceRecordCrime.ViewModels.PoliceStationViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="container justify-content-center">
    <div class="card">
        <div class="card-title">
            <h1 class="font-monospace">Police Station New Create</h1>
        </div>
        <form asp-action="Edit">
            <div class="card-body">
                <input type="hidden" asp-for="Id" /> <!--ID kullanici sayfasida görülmeyecek -->
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input type="text" asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Location"></label>
                    <input type="text" asp-for="Location" class="form-control" />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn-primary">Update</button>
                <a asp-action="Index" class="btn-secondary">Back to list</a>
            </div>
        </form>
    </div>
</div>
